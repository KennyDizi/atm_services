{
    "compilerOptions": {
      "module": "commonjs",
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "outDir": "build",
      "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }